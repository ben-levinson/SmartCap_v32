<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="spbStyle">@style/SmoothProgressBar</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/zentri_orange</item>
        <item name="colorAccent">@color/zentri_orange</item>
    </style>

    <style name="ZentriDialogThemeTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/zentri_orange</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <style name="ZentriDialogThemeDivider">
        <item name="android:layout_width">match_parent</item>"
        <item name="android:layout_height">2dip</item>"
        <item name="android:visibility">visible</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="ZentriDialogThemeBodyText" parent="android:TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ModeButtonStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <integer-array name="progressBarColors">
        <item>@color/zentri_orange</item>
    </integer-array>

    <style name="GPlusProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">4dp</item>
        <item name="spb_sections_count">2</item>
        <item name="spb_speed">2.5</item>
        <item name="spb_interpolator">spb_interpolator_linear</item>
        <item name="spb_colors">@array/progressBarColors</item>
        <item name="spb_stroke_width">2dp</item>
    </style>

</resources>
